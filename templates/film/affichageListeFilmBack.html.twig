{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="layout-specing">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success " style="background-color: #25a56a ; height: 40px; width: 250px ;margin-left: 450px" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger" role="alert" style="background-color: red ; height: 40px; width: 250px ;margin-left: 450px">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-xl-9 col-md-6">
                    <h5 class="mb-0">Liste des films</h5>

                    <nav aria-label="breadcrumb" class="d-inline-block mt-2">
                        <ul class="breadcrumb breadcrumb-muted bg-transparent rounded mb-0 p-0">
                            <li class="breadcrumb-item"><a href="#">Pidev</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Film</li>
                        </ul>
                    </nav>
                </div><!--end col-->

                <div class="col-xl-3 col-md-6 mt-4 mt-md-0 text-md-end">

                    <a href="{{ path('ajouterFilm') }}" class="btn btn-primary">Ajouter Film</a>
                    <div class="col-xl-3 col-lg-6 col-md-8 mt-4 mt-md-0">
                        <div class="justify-content-md-end">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-sm-12 col-md">
                                    <div class="row justify-content-between align-items-center">
                                        <div class="col-sm-12 col-md">
                                            <div class="mb-12 position-relative">
                                                <select style="margin-top:-40px;margin-left: 20px;" class="form-control time-during select2input" onChange="location = this.options[this.selectedIndex].value;">
                                                    <option>Trier</option>
                                                    <option value="triParDate">Date</option>
                                                    <option value="triParNote">Note</option>
                                                    <option value="triParTitre">Titre</option>
                                                </select>
                                            </div>
                                        </div><!--end col-->
                                    </div>
                                </div><!--end col-->
                            </div><!--end row-->
                        </div>
                    </div><!--end col-->
                </div><!--end col-->
            </div><!--end row-->

            <div class="row row-cols-xl-5">
                {% for film in film %}
                    <div class="col-xl col-lg-4 col-md-6 mt-4">
                        <div class="card team border-0 rounded shadow overflow-hidden">
                            <div class="team-img position-relative">
                                <img src="{{ asset('uploads/images/'~film.image) }}" class="img-fluid" alt="">
                                <ul class="list-unstyled team-social mb-0">
                                    <li><a href="{{ path('modificationFilmBack',{'id':film.id}) }}"  target="_blank" class="btn btn-icon btn-pills btn-soft-success"><i class="uil uil-pen" class="icons"></i></a></li>
                                    <li class="mt-2"><a href="{{ path('suppressionFilmBack',{'id':film.id}) }}" target="_blank" class="btn btn-icon btn-pills btn-soft-danger"><i class="uil uil-times-circle" class="icons"></i></a></li>
                                </ul>
                            </div>
                            <div class="card-body content text-center">
                                <a href="#" class="title text-dark h5 d-block mb-0">{{ film.titre }}</a>
                                <small class="text-muted speciality">{{ film.categorie.type }}</small>
                            </div>
                        </div>
                    </div><!--end col-->
                {% endfor %}
            </div><!--end row-->
            <div class="row text-center">
                <div class="col-12 mt-4">
                    <ul class="pagination justify-content-end mb-0 list-unstyled">
                    </ul><!--end pagination-->
                </div><!--end col-->
            </div><!--end row-->
        </div>
    </div><!--end container-->
{% endblock %}