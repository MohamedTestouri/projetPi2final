{% extends 'base.html.twig' %}
{% block recherche %}
    <div class="search-bar p-0 d-none d-md-block ms-2">
        <div id="search" class="menu-search mb-0">
            <form role="search" method="get" id="searchform" class="searchform">
                <div>
                    <input class="form-control" id="system-search" name="q" placeholder="Search for" required>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="layout-specing">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success " style="background-color: #25a56a ; height: 40px; width: 250px ;margin-left: 450px" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger" role="alert" style="background-color: red ; height: 40px; width: 250px ;margin-left: 450px">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-xl-9 col-lg-6 col-md-4">
                    <h5 class="mb-0">Liste Des Films</h5>
                    <nav aria-label="breadcrumb" class="d-inline-block mt-2">
                        <ul class="breadcrumb breadcrumb-muted bg-transparent rounded mb-0 p-0">
                            <li class="breadcrumb-item"><a href="index.html">Pidev</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Film</li>
                        </ul>
                    </nav>
                </div><!--end col-->

            </div><!--end row-->

            <div class="row">
                <div class="col-12 mt-4">
                    <div class="table-responsive shadow rounded">
                        <table class="table table-list-search">
                            <thead>
                            <tr>
                                <th class="border-bottom py-3" style="min-width: 50px;">#</th>
                                <th class="border-bottom py-3" style="min-width: 180px;">Titre</th>
                                <th class="border-bottom py-3" style="min-width: 150px;">Réalisé par</th>
                                <th class="border-bottom py-3" style="min-width: 150px;">Date Sortie</th>
                                <th class="border-bottom py-3" style="min-width: 150px;">Duree</th>
                                <th class="border-bottom py-3">Categorie</th>
                                <th class="border-bottom py-3" style="min-width: 150px;">Note</th>
                                <th class="border-bottom py-3">Type</th>
                                <th class="border-bottom py-3" style="min-width: 150px;"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for film  in film %}
                                <tr>
                                    <th>{{ film.id }}</th>
                                    <td class="py-3">
                                        <a href="#" class="text-dark">
                                            <div class="d-flex align-items-center">
                                                <img src="{{ asset('uploads/images/'~film.image) }}" class="avatar avatar-md-sm rounded-circle shadow" alt="">
                                                <span class="ms-2">{{ film.titre  }}</span>
                                            </div>
                                        </a>
                                    </td>
                                    <td>{{ film.realisepar  }}</td>
                                    <td>{{ film.datesortie | date('Y-m-d H:i:s')}}</td>
                                    <td>{{ film.duree | date('Y-m-d H:i:s')}}</td>
                                    <td>{{ film.categorie.type }}</td>
                                    <td>{{ film.note }}</td>
                                    <td>
                                        <a href="#" class="text-dark">
                                            <div class="d-flex align-items-center">
                                                <a><span class="ms-2">{{ film.titre  }}</span></a>
                                            </div>
                                        </a>
                                    </td>
                                    <td class="text-end">
                                        <a href="{{ path('modificationFilmBack',{'id':film.id}) }}" class="btn btn-icon btn-pills btn-soft-success" ><i class="uil uil-pen"></i></a>
                                        <a href="{{ path('suppressionFilmBack',{'id':film.id}) }}" class="btn btn-icon btn-pills btn-soft-danger" ><i class="uil uil-times-circle"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div><!--end row-->
            <div class="row text-center">
                <div class="col-12 mt-4">
                    <ul class="pagination justify-content-end mb-0 list-unstyled">

                    </ul><!--end pagination-->
                </div><!--end col-->
            </div><!--end row-->
        </div>
    </div><!--end container-->

    <!-- Footer Start -->
    <!-- End -->
    <!--End page-content" -->
    <!-- page-wrapper -->

    <!-- Modal start -->

    <!-- Accept Appointment Start -->
    <div class="modal fade" id="acceptappointment" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body py-5">
                    <div class="text-center">
                        <div class="icon d-flex align-items-center justify-content-center bg-soft-success rounded-circle mx-auto" style="height: 95px; width:95px;">
                            <i class="uil uil-check-circle h1 mb-0"></i>
                        </div>
                        <div class="mt-4">
                            <h4>Accept Appointment</h4>
                            <p class="para-desc mx-auto text-muted mb-0">Great doctor if you need your family member to get immediate assistance, emergency treatment.</p>
                            <div class="mt-4">
                                <a href="#" class="btn btn-soft-success">Accept</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Accept Appointment End -->

    <!-- Cancel Appointment Start -->
    <div class="modal fade" id="cancelappointment" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body py-5">
                    <div class="text-center">
                        <div class="icon d-flex align-items-center justify-content-center bg-soft-danger rounded-circle mx-auto" style="height: 95px; width:95px;">
                            <i class="uil uil-times-circle h1 mb-0"></i>
                        </div>
                        <div class="mt-4">
                            <h4>Annuler Rendez-Vous</h4>
                            <p class="para-desc mx-auto text-muted mb-0">Etes vous sur d'annuler ce rendez-vous?</p>
                            <div class="mt-4">
                                <a href="#" class="btn btn-soft-danger">Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function() {
            var activeSystemClass = $('.list-group-item.active');

            //something is entered in search form
            $('#system-search').keyup( function() {
                var that = this;
                // affect all table rows on in systems table
                var tableBody = $('.table-list-search tbody');
                var tableRowsClass = $('.table-list-search tbody tr');
                $('.search-sf').remove();
                tableRowsClass.each( function(i, val) {

                    //Lower text for case insensitive
                    var rowText = $(val).text().toLowerCase();
                    var inputText = $(that).val().toLowerCase();
                    if(inputText != '')
                    {
                        $('.search-query-sf').remove();
                        tableBody.prepend('<tr class="search-query-sf"><strong>Searching for: "'
                            + $(that).val()
                            + '"</strong></tr>');
                    }
                    else
                    {
                        $('.search-query-sf').remove();
                    }

                    if( rowText.indexOf( inputText ) == -1 )
                    {
                        //hide rows
                        tableRowsClass.eq(i).hide();

                    }
                    else
                    {
                        $('.search-sf').remove();
                        tableRowsClass.eq(i).show();
                    }
                });
                //all tr elements are hidden
                if(tableRowsClass.children(':visible').length == 0)
                {
                    tableBody.append('<td class="search-sf">Aucune Résultat trouvé</td>');
                }
            });
        });


    </script>
{% endblock %}