{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
    <div class="layout-specing">
    <div class="row">
    <div class="col-xl-9 col-md-6">
        <h5 class="mb-0">Ajout Catégorie</h5>

        <nav aria-label="breadcrumb" class="d-inline-block mt-2">
            <ul class="breadcrumb breadcrumb-muted bg-transparent rounded mb-0 p-0">
                <li class="breadcrumb-item"><a href="#">Acceuil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Catégorie</li>
            </ul>
        </nav>
    </div><!--end col-->
    <div class="col-lg-8 mt-4">
        <div class="card border-0 p-4 rounded shadow" style="margin-left: 250px">
            {{ form_start(form) }}
            <div class="row">

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Nom Catégorie</label>
                        {{ form_widget(form.type) }}
                    </div>
                    <div class="form-error">
                        {{ form_errors(form.type)  }}
                    </div>
                </div><!--end col-->
            </div><!--end row-->

            {{ form_widget(form.Ajouter) }}
            {{ form_end(form) }}
        </div>
        <br>
        <br>
    </div><!--end col-->
    <br>
    <br>
{% endblock %}